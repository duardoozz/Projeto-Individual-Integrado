<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SALAFLUX</title>
  <link rel="stylesheet" href="/css/page1.css">
</head>
<body>

  <section class="hero">
    <h1>SALAFLUX</h1>
    <p>Mais do que uma sala, um espa√ßo para possibilidades</p>
    <a href="/bookings"><button>Reservar</button></a>
  </section>

  <section class="agenda">
    <h2>Minhas reservas</h2>
    <form action="/bookings" method="get"></form>
    <div class="cards">
      <% if (typeof bookings !== 'undefined' && bookings.length > 0) { %>
        <% bookings.forEach(function(booking) { %>
          <a href="/cancel/<%= booking.id %>">
            <div class="card">
              <h3>Sala <%= booking.room_id %></h3>
              <p class="description"><%= booking.description %></p>
              <div class="card-footer">
                <span class="date-time"><span class="date"><%= booking.date %></span> - <span class="time"><%= booking.start_time %></span></span>
              </div>
            </div>
          </a>
        <% }) %>
      <% } else { %>
        <p>Nenhuma reserva encontrada.</p>
      <% } %>
    </div>
  </section>

  <script src="/js/page1.js"></script>
</body>
</html>
